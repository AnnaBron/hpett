<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        tools:context="il.co.quix.afeka.hpet.ReportForDog"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/relativeLayout2" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/linearLayout"
            android:weightSum="1" >

            <ImageView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:id="@+id/dogsImage"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:minHeight="200dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:scaleType="centerInside"
                android:layout_marginBottom="40dp"
                android:minWidth="240dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="נראה לאחרונה ב.."
                android:id="@+id/textView"
                android:layout_gravity="right"
                android:editable="false"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/lastAddress"
                android:layout_gravity="right"
                android:editable="false"
                android:layout_marginTop="20dp"
                android:textColor="#ff1d1cff"
                android:textSize="18dp"
                android:textIsSelectable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="הערות המדווח"
                android:id="@+id/textView4"
                android:layout_gravity="right"
                android:editable="false"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/sendersComments"
                android:layout_gravity="right"
                android:editable="false"
                android:layout_marginTop="20dp"
                android:textColor="#ff1d1cff" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="נווט לכלב"
                android:id="@+id/wazeBtn"
                android:layout_weight="0.06"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:visibility="visible"

                android:textColor="#000000"
                android:textSize="30sp"


                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
