<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="il.co.quix.afeka.hpet.ReportForDog"
    android:id="@+id/report_dog">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="דיווח על כלב"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:textIsSelectable="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.51"
            android:backgroundTint="@color/bright_foreground_material_dark"
            android:layout_marginTop="20dp"
            android:background="@drawable/common_full_open_on_phone"
            android:minHeight="300dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="כתובת לדיווח"
            android:id="@+id/reportAddress"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp" />


    </LinearLayout>
    <Button
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:text="שלח דיווח"
        android:id="@+id/button"
        android:layout_weight="0.06"
        android:layout_alignParentBottom="true" />
        android:singleLine="true" />
</RelativeLayout>
